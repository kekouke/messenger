<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="17dp">

    <View
        android:id="@+id/avatar"
        android:layout_width="@dimen/avatar_medium_64dp"
        android:layout_height="@dimen/avatar_medium_64dp"
        android:background="@drawable/bg_avatar_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tv_username"
        android:layout_width="200dp"
        android:layout_height="@dimen/text_22sp"
        android:layout_marginStart="14dp"
        android:background="@drawable/bg_small_rounded_shimmer"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toTopOf="@id/avatar" />

    <View
        android:layout_width="100dp"
        android:layout_height="@dimen/text_16sp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_small_rounded_shimmer"
        app:layout_constraintStart_toStartOf="@id/tv_username"
        app:layout_constraintTop_toBottomOf="@id/tv_username" />

</androidx.constraintlayout.widget.ConstraintLayout>