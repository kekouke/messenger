<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Tfs_spring_2024" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/status_bar_background</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="bottomSheetDialogTheme">@style/ModalBottomSheetDialog</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="Theme.Tfs_spring_2024" parent="Base.Theme.Tfs_spring_2024" />

    <style name="ModalBottomSheet" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@color/background_element_primary</item>
        <item name="behavior_peekHeight">@dimen/bottom_sheet_peek_height</item>
        <item name="android:maxWidth">10000dp</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>

    <style name="TabTextAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_22sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_24sp</item>
    </style>

    <style name="DefaultToolbar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/background_nav_element</item>
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
    </style>
</resources>